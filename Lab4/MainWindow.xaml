<Window x:Class="Lab4.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Бюро послуг" Height="450" Width="800"
        Closing="Window_Closing">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
			<Label Content="Назва бюро:" VerticalAlignment="Center"/>
			<TextBox x:Name="txtBureauName" Width="200" Margin="5,0,0,0"/>
		</StackPanel>
		<ListBox x:Name="lbBureaus" Grid.Row="1" DisplayMemberPath="ShortString" SelectionChanged="lbBureaus_SelectionChanged"/>
		<StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,0,0">
			<Button x:Name="btnAddOrder" Content="Додати" Width="75" Click="BtnAddBureau_Click"/>
			<Button x:Name="btnEditOrder" Content="Редагувати" Width="75" Margin="5,0,0,0" Click="BtnEditBureau_Click" IsEnabled="False"/>
			<Button x:Name="btnDetailedInfo" Content="Детальна інофрмація" Width="75" Margin="5,0,0,0" Click="btnDetailedInfo_Click"/>
		</StackPanel>
	</Grid>
</Window>